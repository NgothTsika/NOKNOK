{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "types": ["jest"],
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["assets/*"],
      "@features/*": ["features/*"],
      "@service/*": ["@service/*"],
      "@navigation/*": ["navigation/*"],
      "@components/*": ["components/*"],
      "@state/*": ["state/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
